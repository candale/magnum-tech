  // Language switching functionality
  function switchLanguage(lang) {
    // Store language preference
    localStorage.setItem('language', lang);

    // Update button states
    const enButtons = document.querySelectorAll('#lang-en, #mobile-lang-en');
    const roButtons = document.querySelectorAll('#lang-ro, #mobile-lang-ro');

    if (lang === 'en') {
      enButtons.forEach(btn => {
        btn.classList.remove('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
        btn.classList.add('text-gray-900', 'bg-gray-100');
      });
      roButtons.forEach(btn => {
        btn.classList.remove('text-gray-900', 'bg-gray-100');
        btn.classList.add('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
      });
    } else {
      roButtons.forEach(btn => {
        btn.classList.remove('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
        btn.classList.add('text-gray-900', 'bg-gray-100');
      });
      enButtons.forEach(btn => {
        btn.classList.remove('text-gray-900', 'bg-gray-100');
        btn.classList.add('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
      });
    }

    // Update page content
    updatePageContent(lang);
  }

  // Language switching event listeners
  document.querySelectorAll('#lang-en, #mobile-lang-en').forEach(btn => {
    btn.addEventListener('click', () => switchLanguage('en'));
  });

  document.querySelectorAll('#lang-ro, #mobile-lang-ro').forEach(btn => {
    btn.addEventListener('click', () => switchLanguage('ro'));
