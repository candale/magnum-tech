---
const projects = [
  {
    id: 1,
    image: "/images/projects/project1.png",
    title: "Automated Assembly System",
    description: "Advanced manufacturing automation solution"
  },
  {
    id: 2,
    image: "/images/projects/project2.png",
    title: "Conveyor Control System",
    description: "Industrial material handling system"
  },
  {
    id: 3,
    image: "/images/projects/project3.png",
    title: "Quality Testing Equipment",
    description: "Precision testing and verification system"
  },
  {
    id: 4,
    image: "/images/projects/project4.png",
    title: "Robotic Workstation",
    description: "Automated manufacturing workstation"
  },
  {
    id: 5,
    image: "/images/projects/project5.png",
    title: "PLC Control Panel",
    description: "Custom electrical control system"
  },
  {
    id: 6,
    image: "/images/projects/project6.png",
    title: "Industrial Machinery",
    description: "Specialized production equipment"
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" data-text="projects-title">
        PROJECT SAMPLES
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto" data-text="projects-subtitle">
        Showcasing our engineering excellence through innovative solutions and precision craftsmanship
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="group">
          <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
            <div class="aspect-[4/3] overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100 relative">
              <div class="absolute inset-0 bg-white/20"></div>
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 mix-blend-multiply opacity-90 group-hover:opacity-100"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
            </div>
            <div class="p-6 bg-white">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">{project.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{project.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/portfolio"
        class="inline-flex items-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors duration-200"
      >
        <span data-text="projects-view-all">View All Projects</span>
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>