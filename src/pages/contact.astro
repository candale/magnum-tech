---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - MAGNUM TECHNOLOGY">
	<Header />
	<main class="pt-20">
		<section class="py-20 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6" data-text="contact-page-title">
						CONTACT US
					</h1>
					<p class="text-xl text-gray-600 max-w-3xl mx-auto" data-text="contact-page-subtitle">
						Initiate your engineering project consultation with our technical specialists. We provide comprehensive
						project assessment, technical specifications review, and strategic implementation planning.
					</p>
				</div>

				<div class="lg:grid lg:grid-cols-2 lg:gap-16">
					<div class="mb-12 lg:mb-0">
						<div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
							<h2 class="text-2xl font-bold text-gray-900 mb-6" data-text="contact-consultation-title">Technical Consultation</h2>

							<div class="space-y-6">
								<div class="flex items-start">
									<div class="w-12 h-12 bg-gray-900 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
										<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
											<path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
										</svg>
									</div>
									<div>
										<h3 class="text-lg font-semibold text-gray-900 mb-1" data-text="contact-info-phone">Phone</h3>
										<p class="text-gray-600">+40 756 618 998</p>
										<a href="tel:+40756618998" class="text-gray-900 hover:text-gray-600 font-medium transition-colors" data-text="contact-info-phoneAction">
											Schedule consultation
										</a>
									</div>
								</div>

								<div class="flex items-start">
									<div class="w-12 h-12 bg-gray-700 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
										<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
											<path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
											<path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
										</svg>
									</div>
									<div>
										<h3 class="text-lg font-semibold text-gray-900 mb-1" data-text="contact-info-email">Email</h3>
										<p class="text-gray-600">office@magnum-technology.eu</p>
										<a href="mailto:office@magnum-technology.eu" class="text-gray-900 hover:text-gray-600 font-medium transition-colors" data-text="contact-info-emailAction">
											Request project information
										</a>
									</div>
								</div>

								<div class="flex items-start">
									<div class="w-12 h-12 bg-gray-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
										<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
											<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
										</svg>
									</div>
									<div>
										<h3 class="text-lg font-semibold text-gray-900 mb-1" data-text="contact-info-response">Response Time</h3>
										<p class="text-gray-600" data-text="contact-info-responseText">Professional response within 24 hours</p>
									</div>
								</div>
							</div>

							<div class="mt-8 pt-6 border-t border-gray-200">
								<h3 class="text-lg font-semibold text-gray-900 mb-4">Follow Us</h3>
								<div class="flex space-x-4">
									<a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-gray-900 hover:text-white transition-colors">
										<span class="text-sm font-medium">Fb</span>
									</a>
									<a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-gray-900 hover:text-white transition-colors">
										<span class="text-sm font-medium">Tw</span>
									</a>
									<a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-gray-900 hover:text-white transition-colors">
										<span class="text-sm font-medium">Li</span>
									</a>
									<a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-gray-900 hover:text-white transition-colors">
										<span class="text-sm font-medium">Yt</span>
									</a>
								</div>
							</div>
						</div>
					</div>

					<div>
						<div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
							<h2 class="text-2xl font-bold text-gray-900 mb-6" data-text="contact-form-inquiry">Project Inquiry</h2>

							<form class="space-y-6">
								<div>
									<label for="name" class="block text-sm font-medium text-gray-700 mb-2" data-text="contact-name">Name</label>
									<input type="text" id="name" name="name" class="w-full px-4 py-3 bg-white border border-gray-200 text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all">
								</div>

								<div>
									<label for="email" class="block text-sm font-medium text-gray-700 mb-2" data-text="contact-email">Email</label>
									<input type="email" id="email" name="email" class="w-full px-4 py-3 bg-white border border-gray-200 text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all">
								</div>

								<div>
									<label for="company" class="block text-sm font-medium text-gray-700 mb-2" data-text="contact-company">Company</label>
									<input type="text" id="company" name="company" class="w-full px-4 py-3 bg-white border border-gray-200 text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all">
								</div>

								<div>
									<label for="message" class="block text-sm font-medium text-gray-700 mb-2" data-text="contact-message">Message</label>
									<textarea id="message" name="message" rows="6" class="w-full px-4 py-3 bg-white border border-gray-200 text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all resize-none"></textarea>
								</div>

								<button type="submit" class="w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-4 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
									<span data-text="contact-send">Send Message</span>
								</button>
							</form>
						</div>

						<div class="mt-8 bg-gradient-to-br from-gray-900 to-gray-700 rounded-2xl p-8 text-white">
							<h3 class="text-xl font-bold mb-4" data-text="contact-excellence-title">Engineering Excellence Guaranteed</h3>
							<p class="mb-6" data-text="contact-excellence-text">
								Magnum Technology delivers comprehensive engineering solutions that meet stringent industry standards and exceed client performance expectations.
							</p>
							<div class="space-y-3">
								<div class="flex items-center">
									<svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
									</svg>
									<span data-text="contact-excellence-assessment">Comprehensive technical assessment</span>
								</div>
								<div class="flex items-center">
									<svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
									</svg>
									<span data-text="contact-excellence-solutions">Custom engineering solutions</span>
								</div>
								<div class="flex items-center">
									<svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
									</svg>
									<span data-text="contact-excellence-experience">13+ years of experience</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>